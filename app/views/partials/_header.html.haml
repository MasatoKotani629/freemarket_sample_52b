.header
  .header__container
    .header__container__top
      .header__container__top__logo
        = link_to root_path do
          = image_tag 'common/logo.svg', alt: 'mercari', class: 'header__container__top__logo__image', height: '36', width: '134'
      = form_tag({controller: :products, action: :search}, method: :get, class: '.header__container__top__search') do
        = text_field_tag :text, '', placeholder: '何かお探しですか？', name: 'keyword', class: '.header__container__top__search__field'
        = button_tag '', class: "form__button fas fa-search", value: "&#xf002"
    .header__container__bottom
      %nav.header__container__bottom__nav
        .header__container__bottom__nav__categories 
          .header__container__bottom__nav__categories__title
            %i.fas.fa-list
            %span カテゴリーから探す
          %ul.header__container__bottom__nav__categories__box
            %li.header__container__bottom__nav__categories__box__first
            %li.header__container__bottom__nav__categories__box__secound
            %li.header__container__bottom__nav__categories__box__third
        .header__container__bottom__nav__brands
          .header__container__bottom__nav__brands__title
            %i.fas.fa-tag
            %span ブランドから探す
      .header__container__bottom__right
        - if user_signed_in?
          .header__container__bottom__right__notice
            %i.far.fa-bell
            %span お知らせ
          .header__container__bottom__right__todo
            %i.fas.fa-check.fa-lg
            %span やることリスト
          = link_to '/mypages', method: :get do
            .header__container__bottom__right__mypage
              = image_tag 'common/member_thumb.png', alt: 'icon', class: 'header__container__bottom__user__mypage__icon', height: '32', width: '32'
              %span マイページ
        - else
          = link_to signup_path, class: 'header__container__bottom__right__signup' do
            .header__container__bottom__right__signup__left-btn
              %p<新規会員登録
          = link_to user_session_path, class: 'header__container__bottom__right__login' do
            .header__container__bottom__right__login__right-btn
              %p<ログイン

