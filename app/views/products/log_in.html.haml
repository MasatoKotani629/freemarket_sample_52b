= render 'products/single-header'
.log_in-frame
  .log_in-main
    .log_in-main__new
      %p アカウントをお持ちでない方はこちら
      .log_in-main__new__box
        = link_to "#" do
          %p 新規会員登録
    .log_in-main__sns
      .log_in-main__sns__facebook
        = link_to "#", class: 'log_in-main__sns__facebook__url'  do
          %i.fab.fa-facebook-square
          %p  Facebookでログイン
      .log_in-main__sns__google
        = link_to "#", class: 'log_in-main__sns__google__url' do
          %p  Googleでログイン
        =image_tag 'google-icon.png', class: 'log_in-main__sns__google__img'
    .log_in-main__form
      .log_in-main__form__box1
        %input.log_in-main__form__box1__mail{name: "email", placeholder: "メールアドレス", type: "email", value: ""}/
      .log_in-main__form__box2
        %input.log_in-main__form__box2__pass{name: "password", placeholder: "パスワード", type: "password", value: ""}/
      -# "device"導入時にgemにて導入
      .log_in-main__form__box3
        .g-recaptcha{"data-sitekey" => "6LdsYqgUAAAAAE_S1gGbyzcki_z5A-W_HAS7KAak"}
      .log_in-main__form__box4
        = link_to "#" do
          %p ログイン
      = link_to "#", class: 'log_in-main__form__forget' do
        %p パスワードをお忘れの方
= render 'products/single-footer'
